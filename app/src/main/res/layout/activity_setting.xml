<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_basic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    // 상단 레이아웃
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="89"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="@drawable/uniminuto_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="#f0e289"
            android:weightSum="100"
            android:orientation="horizontal">

            // 뒤로가기 버튼
            <Button
                android:id="@+id/btn_back"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_back"/>

            // 제목
            <TextView
                android:layout_weight="80"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text = "Ajuste"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"/>

            // 나머지 공간
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Notificación"
                android:textSize="20sp"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:weightSum="1">


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:padding="15dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:padding="15dp">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="GPS"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

            </LinearLayout>

            //GPS Setting
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:padding="15dp">

                <Button
                    android:id="@+id/btn_gpsSetting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ajuste"
                    android:background="@drawable/button_notibar_didit"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Vibración"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>


            //Vibration Setting
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:padding="15dp">

                <Button
                    android:id="@+id/btn_vibrationOn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="8dp"
                    android:background="@drawable/button_notibar_didit"
                    android:textColor="#FFFFFF"
                    android:text="Encendido" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:padding="15dp">

                <Button
                    android:id="@+id/btn_vibrationOff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="8dp"
                    android:background="@drawable/button_notibar_didit"
                    android:textColor="#FFFFFF"
                    android:text="Apagado" />

            </LinearLayout>
        </LinearLayout>


        //만든이

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="28"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="-" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60" />

        </LinearLayout>


    </LinearLayout>
    // 사용할 공간


    // 하단 레이아웃

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">

        <include
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/basic_layout"
            />
    </LinearLayout>
</LinearLayout>
